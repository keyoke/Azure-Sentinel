{
    "name": "DTAuditLogs2DCR",
    "apiVersion": "2021-09-01-preview",
    "type": "Microsoft.Insights/dataCollectionRules",
    "location": "{{location}}",
    "properties": {
        "streamDeclarations": {
            "Custom-DynatraceAuditLogsV2": {
                "columns": [
                    {
                        "name": "timestamp",
                        "type": "int"
                    },
                    {
                        "name": "type",
                        "type": "string"
                    },
                    {
                        "name": "logId",
                        "type": "string"
                    },
                    {
                        "name": "eventType",
                        "type": "string"
                    },
                    {
                        "name": "category",
                        "type": "string"
                    },
                    {
                        "name": "entityId",
                        "type": "string"
                    },
                    {
                        "name": "environmentId",
                        "type": "string"
                    },
                    {
                        "name": "user",
                        "type": "string"
                    },
                    {
                        "name": "userType",
                        "type": "string"
                    },
                    {
                        "name": "userOrigin",
                        "type": "string"
                    },
                    {
                        "name": "success",
                        "type": "boolean"
                    },
                    {
                        "name": "patch",
                        "type": "dynamic"
                    }
                ]
            }
        },
        "destinations": {
            "logAnalytics": [
                {
                    "workspaceResourceId": "{{workspaceResourceId}}",
                    "name": "clv2ws1"
                }
            ]
        },
        "dataFlows": [
            {
                "streams": [
                    "Custom-DynatraceAuditLogsV2"
                ],
                "destinations": [
                    "clv2ws1"
                ],
                "transformKql": "source | extend TimeGenerated = unixtime_milliseconds_todatetime(timestamp) | project-away timestamp,type",
                "outputStream": "Custom-DynatraceAuditLogsV2_CL"
            }
        ],
        "dataCollectionEndpointId": "[concat('/subscriptions/',parameters('subscription'),'/resourceGroups/',parameters('resourceGroupName'),'/providers/Microsoft.Insights/dataCollectionEndpoints/',parameters('workspace'))]"
    }
}